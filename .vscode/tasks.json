{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"options": {
				"shell": {
					"executable": "powershell.exe"
				}
			},
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "tsc: 빌드 - tsconfig.json"
		},
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"options": {
				"shell": {
					"executable": "powershell.exe"
				}
			},
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "tsc: 감시 - tsconfig.json"
		}
	]
}